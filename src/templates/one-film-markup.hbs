<div class='backdrop' data-modal>
  <div class='modal'>
    <div class='one-film-markup'>
      <div class='poster'>
        <img class='image' src='https://image.tmdb.org/t/p/w500{{poster_path}}' alt='{{title}}' />
      </div>

      <div>
        <h2 class='movie-title'>{{title}}</h2>

        <div class='movie-parameters'>
          <div class='vote'>
            <p>Vote</p>
            <p>
              <span class='vote-average'>{{vote_average}}</span>
              /
              <span class='vote-count'>{{vote_count}}</span>
            </p>
          </div>
          <div class='popularity'>
            <p>Popularity</p>
            <p>{{popularity}}</p>
          </div>
          <div class='original-title'>
            <p>Original Title</p>
            <p>{{original_title}}</p>
          </div>
          <div class='genre'>
            <p>Genre</p>
            <p>(value)</p>
          </div>
        </div>
        <!-- <div class="movie-parameters">
                    <ul class="parameters">
                        <li>Vote</li>
                        <li>Popularity</li>
                        <li>Original Title</li>
                        <li>Genre</li>
                    </ul>
    
                    <ul class="value">
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                    </ul>
                </div> -->

        <p>About</p>
        <p>
          {{overview}}
        </p>

        <div class='modal-btns-add'>
          <ul class='btns-in-modal'>
            <li class='btn-in-modal'>
              <label class='btn-in-modal-label'>
                <input type='checkbox' value='Watched' class='btn-in-modal-input' />
                <span class='btn-watched' id='js-WatchedButton'>Watched</span>
              </label>
            </li>
            <li class='btn-in-modal'>
              <label class='btn-in-modal-label'>
                <input type='checkbox' value='Queue' class='btn-in-modal-input' />
                <span class='btn-queue' id='js-QueueButton'>Queue</span>
              </label>
            </li>
          </ul>
        </div>

      </div>
    </div>
    <button aria-label='Закрытие окна' class='close-modal' data-modal-close type='button'>
      <svg
        width='30'
        height='30'
        viewBox='0 0 30 30'
        fill='none'
        xmlns='http://www.w3.org/2000/svg'
      >
        <path d='M8 8L22 22' stroke='black' stroke-width='2'></path>
        <path d='M8 22L22 8' stroke='black' stroke-width='2'></path>
      </svg>
    </button>
  </div>
</div>